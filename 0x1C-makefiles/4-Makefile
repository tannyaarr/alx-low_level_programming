# Makefile for building the 'school' executable

CC = gcc

SRC = main.c school.c

OBJ = $(SRC:.c=.o)

NAME = school

RM = rm -f

CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
        $(CC) $(CFLAGS) -o $(NAME) $(OBJ)

clean:
        $(RM) *~ $(NAME)

oclean:
        $(RM) $(OBJ)

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all
